<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/track_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="The wall"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/track_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Pink Floyd"
            app:layout_constraintTop_toBottomOf="@id/track_name"
            app:layout_constraintStart_toStartOf="@id/track_name"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/track_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="url"
            app:layout_constraintTop_toBottomOf="@id/track_album"
            app:layout_constraintStart_toStartOf="@id/track_album"/>

</androidx.constraintlayout.widget.ConstraintLayout>